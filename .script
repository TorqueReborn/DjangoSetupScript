#!/bin/bash

echo "=== Django Project & App Generator ==="

# Ask for project name
read -p "Enter Django project name: " project_name

if [ -z "$project_name" ]; then
    echo "Project name cannot be empty!"
    exit 1
fi

# Create project
echo "Creating Django project: $project_name"
django-admin startproject "$project_name" .

# Ask for app name
read -p "Enter Django app name: " app_name

if [ -z "$app_name" ]; then
    echo "App name cannot be empty!"
    exit 1
fi

# Create app
echo "Creating Django app: $app_name"
python3 manage.py startapp "$app_name"

echo "=================================="
echo "Project '$project_name' and App '$app_name' created successfully!"